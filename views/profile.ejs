<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pinterest Profile & Feed</title>
    <!-- Import Google Font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <!-- Link to CSS file -->
    <link rel="stylesheet" href="/stylesheet/profile.css" />
  </head>
  <body>
    <!-- Profile Section -->
    <div class="profile-section">
      <div class="profile-header">
        <div class="profile-picture">
          <img
            src="https://res.cloudinary.com/muhammederdem/image/upload/v1537638518/Ba%C5%9Fl%C4%B1ks%C4%B1z-1.jpg"
            alt="profile"
          />
        </div>
        <div class="profile-info">
          <h2 class="profile-name"><%= user.username %></h2>
          <h3 class="profile-handle">@<%= user.fullname %></h3>
          <p class="profile-bio">
            <%= user.email %> | Passionate about design and creativity. Lorem ipsum
            dolor sit amet, consectetur adipisicing elit. Amet, libero.
          </p>
          <a href="/logout" class="profile-button">Logout</a>
        </div>
      </div>

      <div class="upload-section">
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <input
            type="text"
            name="fileCaption"
            placeholder="What's the story behind this post?"
            class="input-field"
          />
          <input type="file" name="file" class="input-field file-upload" required />
          <button type="submit" class="btn-upload">Upload</button>
        </form>
      </div>
    </div>

    <!-- Feed Section -->
    <div class="feed-grid">
      <% user.posts.forEach(function(post) { %>
        <div class="post-card">
          <img src="/uploads/<%= post.image %>" alt="Post Image" class="post-image" />
          <h5 class="post-text"><%= post.postText %></h5>
        </div>
      <% }) %>
    </div>

    <!-- Link to external JS file -->
    <script src="/js/profile.js"></script>
  </body>
</html>
